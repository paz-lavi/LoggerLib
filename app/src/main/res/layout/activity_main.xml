<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"

android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_LBL_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="counter"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="15dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_add"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add 1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_next"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="next" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_debug"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="debug" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_error"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="error" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_warn"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="warn" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_info"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="info" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_verbose"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="verbose" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_moc"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mock Up" />
    </LinearLayout>
</LinearLayout>